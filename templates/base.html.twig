<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
          <title>{% block title %}EURENT{% endblock %}</title>
        {% block stylesheets %}
         <link rel="stylesheet" href="{{asset('assets/css/style.css')}}"/>
        {% endblock %}
    </head>
    <body>
         <header>
             <a <h1 href="{{path("homeaction")}}"><div class="my-logo"></div></a>
        </header>
           <nav class="topnav" id="myTopnav">
            {% if app.user %}
                <a href="{{path("logout")}}">Salir</a>
                <a href="{{path("profile")}}">Perfil</a>
              <a href="{{path("detallcompras")}}">Compra</a>
                <a href="{{path("vehicles")}}">Vehiculo</a>
            {%else%}
                <a href="{{path("register")}}">Registro</a>
                <a href="{{path("login")}}">Inicio</a>
                <a href="{{path("vehicles")}}">Vehiculo</a>
               <a href="{{path("contact")}}">Contacta</a>
            {%endif%}
            
            
            
            
            
            
            
 <a href="javascript:void(0);" class="icon" onclick="deployMenu()">&#9776;</a>
          </nav>
       
            <div class="body-container">
        {% block body %}
        {% endblock %}
            </div>
            <footer>
                {% if app.user %}
                 <div class="classAdminoptions">
                {%if app.user.role == "ROLE_ADMIN"%}
                    <a href="{{path("adminpanel")}}" class="admincontrl">Panel de control</a>
                {%endif%}
                </div>
                {%endif%}
            </footer>
        {% block javascripts %}
              <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
              <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
              <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
                <script>
                    //Cambia menu a Telefono
                function deployMenu() {
                    var x = document.getElementById("myTopnav");
                    if (x.className === "topnav") {
                        x.className += " responsive";
                    } else {
                        x.className = "topnav";
                    }
                    var y = document.getElementById("down");
                    if(y.className==="dropdown"){
                        y.className += " displayme";
                    }else{
                        y.className = "dropdown";
                    }
                    
                }
                </script>
        {% endblock %}
    </body>
</html>